<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="mb-3">
      <%= form.radio_button :gender, "male" %>
      <%= form.label :male %>
      <%= form.radio_button :gender, "female" %>
      <%= form.label :female  %>

  </div>

  <div class="mb-3">
    <%= form.label :birth_date, style: "display: block" %>
    <%= form.datetime_field :birth_date %>
  </div>

  <div class="mb-3">
    <%= form.label :death_date, style: "display: block" %>
    <%= form.datetime_field :death_date %>
  </div>

  <div class="mb-3">
    <%= form.label :family_id, style: "display: block" %>
    <%= form.select :family_id, Family.all.map {|r| [r.name, r.id]}  %>
  </div>

  <div class="mb-3">
    <%= form.submit %>
  </div>
<% end %>
